<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1" android:id="@+id/LL">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.80">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView" android:background="@drawable/party"/>
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/LinearLayout"
                android:background="#ffeeff9a"/>
        <ImageView
                android:layout_width="138dp"
                android:layout_height="138dp"
                android:id="@+id/BroImage" android:src="@drawable/phase0"
                android:layout_gravity="center_horizontal|bottom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your energy:"
                android:id="@+id/yourEnergyText" android:layout_gravity="center_horizontal" android:textSize="60dip"
                android:paddingTop="30dip" android:paddingLeft="10dip"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ENERGYgained" android:layout_gravity="center" android:textSize="80dip"
                android:paddingTop="30dip" android:paddingLeft="10dip"/>
    </FrameLayout>
</LinearLayout>