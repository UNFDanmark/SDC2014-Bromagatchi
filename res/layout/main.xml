<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#FF6F7E7F">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="30dip" android:background="#ff5e6d6e"
            android:paddingTop="10dip" android:paddingLeft="10dip">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="HP: 100"
                android:id="@+id/HPstatTEXT" android:gravity="left" android:layout_gravity="left"
                android:layout_weight="0.20" android:singleLine="false"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="GAINZ: 0 "
                android:id="@+id/XPstatTEXT"
                android:layout_weight=".20"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ENERGY: 50"
                android:id="@+id/ENERGYstatTEXT" android:layout_weight=".20"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="350dp" android:background="#ff6f7e7f">
        <ImageView
                android:layout_width="486dp"
                android:layout_height="579dp"
                android:id="@+id/imageView"
                android:src="@drawable/background1" android:layout_gravity="center"/>
        <ImageView
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:id="@+id/BroImage"
                android:src="@drawable/phase1"
                android:layout_gravity="center" android:layout_marginTop="40dp"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Exercise"
                android:id="@+id/exercisebutton" android:layout_gravity="center_vertical" android:layout_weight=".50"
                android:clickable="true" android:height="90dip"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rest"
                android:id="@+id/restbutton" android:layout_gravity="center_vertical" android:layout_weight=".50"
                android:clickable="true" android:height="90dip"/>
    </LinearLayout>
</LinearLayout>

